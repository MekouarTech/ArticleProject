@page
@model ArticalProject.Pages.AllUsersModel
@{
}

    <section class="bounce animated article-clean">
        <div class="container">
            <section class="team-boxed">
                <div class="container">
                    <div class="intro">
                        <h2 class="text-center" style="font-family: Cairo, sans-serif;">ناشرونا</h2>
                    </div>

                <form class="me-auto search-form" target="_self">
                    <div class="d-flex align-items-center">
                        <label class="form-label d-flex mb-0" for="search-field"><i class="fa fa-search"></i></label>
                        <input type="hidden" value="BySearch" name="LoadState" />
                        <input class="form-control search-field" type="search" id="search-field" name="SearchName" placeholder="ابحث عن ناشر" style="font-family: Cairo, sans-serif;">
                    </div>
                </form>

                    <div class="row people">
                        @{
                            foreach (var item in Model.ListOfAuthor)
                            {

                                <div class="col-md-6 col-lg-4 item" data-aos="zoom-out">
                                    <div class="box">
                                        <img class="rounded-circle" src="~/Images/@item.ProfileImageURL" />

                                        <h3 class="name" style="font-family: Cairo, sans-serif;">@item.FullName</h3>
                                        <p style="font-family: Cairo, sans-serif;" class="description">@item.Bio</p>
                                    
                                        <div class="social">
                                            <a href="@item.Facebook" target=”_blank”>
                                                <i class="fa fa-facebook-official"></i>
                                            </a>
                                            <a href="@item.Twitter" target=”_blank”>
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                            <a href="@item.Instagram" target=”_blank”>
                                                <i class="fa fa-instagram"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                     

                </div>
                <nav class="text-center float-end" style="font-family: Lato, sans-serif;border-color: var(--bs-red);margin: 10px;">
                    <ul class="pagination">

                        @{

                            <form method="get" class="m-2">
                                <input type="hidden" value="All" name="LoadState" />
                                <input type="submit" class="form-control bg-danger" value="الصفحة الاولى" />
                            </form>

                            if (Model.ListOfAuthor.Count > 0)
                            {
                                <form method="get" class="m-2">
                                    <input type="hidden" value="Previous" name="LoadState" />
                                    <input type="hidden" value="@Model.ListOfAuthor.First().Id" name="id" />
                                    <input type="submit" class="form-control bg-danger" value="السابق" />
                                </form>
                            }


                            if (Model.ListOfAuthor.Count == Model.NoOfItems)
                            {
                                <form method="get" class="m-2">
                                    <input type="hidden" value="Next" name="LoadState" />
                                    <input type="hidden" value="@Model.ListOfAuthor.Last().Id" name="id" />
                                    <input type="submit" class="form-control bg-danger" value="التالي" />
                                </form>

                            }

                        }
                    </ul>
                </nav>
            </section>
        </div>
    </section>